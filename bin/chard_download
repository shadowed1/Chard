#!/bin/bash
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
BLUE=$(tput setaf 4)
MAGENTA=$(tput setaf 5)
CYAN=$(tput setaf 6)
BOLD=$(tput bold)
RESET=$(tput sgr0)
echo
echo "${GREEN}"
echo "╔═══════════════════════════════════════════════════════════════════════════════════════════╗"
echo "║${BOLD}                                   Select Chard Distro:${RESET}${GREEN}                                    ║"
echo "╚═══════════════════════════════════════════════════════════════════════════════════════════╝"
echo "${CYAN}╔════════════════════════════════════════════╗${RESET}${MAGENTA} ╔════════════════════════════════════════════╗${RESET}"
echo "${CYAN}║                                            ║${RESET}${MAGENTA} ║                                            ║${RESET}"
echo "${CYAN}║${BOLD}   Option 1 - Chard Arch:${RESET}${CYAN}                   ║${RESET}${MAGENTA} ║${BOLD}   Option 2 - Chard Gentoo:${RESET}${MAGENTA}                 ║${RESET}"           
echo "${CYAN}║                                            ║${RESET}${MAGENTA} ║                                            ║${RESET}"           
echo "${CYAN}║ - Installs 10x faster than Chard Gentoo.   ║${RESET}${MAGENTA} ║ - Export toolchain directly to ChromeOS.   ║${RESET}"          
echo "${CYAN}║ - Supports Steam, Heroic, and most games.  ║${RESET}${MAGENTA} ║ - Recommended for ChromeOS developing.     ║${RESET}"           
echo "${CYAN}║ - Multilib support for x86_64.             ║${RESET}${MAGENTA} ║ - Optimized builds for applications.       ║${RESET}"
echo "${CYAN}║                                            ║${RESET}${MAGENTA} ║                                            ║${RESET}"
echo "${CYAN}╚════════════════════════════════════════════╝${RESET}${MAGENTA} ╚════════════════════════════════════════════╝${RESET}"
echo "${RED}╔═══════════════════════════════════════════════════════════════════════════════════════════╗"
echo "║${BOLD}                                     Option 3 - Exit${RESET}${RED}                                       ║"
echo "╚═══════════════════════════════════════════════════════════════════════════════════════════╝"
echo "${RESET}${BLUE}${BOLD}"

read -rp "                                    Enter Option [1-3]: " choice

case "$choice" in
    1)
        URL="https://raw.githubusercontent.com/shadowed1/Chard/main/Arch/Chard_Installer.sh"
        ;;
    2)
        URL="https://raw.githubusercontent.com/shadowed1/Chard/main/Gentoo/Chard_Installer.sh"
        ;;
    3)
        echo "Exiting."
        exit 0
        ;;
    *)
        echo "Invalid choice."
        exit 1
        ;;
esac
echo "${RESET}${BLUE}"
echo "                           ╔═══════════════════════════════════╗" 
echo "                           ║ Downloading to: ~/Chard_Installer ║"
echo "                           ╚═══════════════════════════════════╝${RESET}" 

curl -L "$URL" -o ~/Chard_Installer || {
    echo "${RED}Download failed. ${RESET}"
    exit 1
}

echo "                     ${YELLOW}Run the commands below with ${RESET}${CYAN}${BOLD}sudo in crosh${RESET}${YELLOW} or ${RESET}${BOLD}${MAGENTA}VT-2${RESET}${YELLOW}:${RESET}"
echo
echo
echo "${GREEN}${BOLD}If on ChromeOS/FydeOS, run:${RESET}${GREEN}"
echo "╔═════════════════════════════════════════════════════╗" 
echo " ${BOLD}sudo mv ~/Chard_Installer /usr/local/Chard_Installer"
echo " sudo bash /usr/local/Chard_Installer${RESET}${GREEN}"
echo "╚═════════════════════════════════════════════════════╝"
echo ""
echo "${CYAN}${BOLD}If on anything else, run:${RESET}${CYAN}"
echo "╔═════════════════════════════════════════════════════╗" 
echo " ${BOLD}sudo -u $USER bash ~/Chard_Installer${RESET}${CYAN}"
echo "╚═════════════════════════════════════════════════════╝"
echo
echo
