#!/bin/bash

RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
BLUE=$(tput setaf 4)
MAGENTA=$(tput setaf 5)
CYAN=$(tput setaf 6)
BOLD=$(tput bold)
RESET=$(tput sgr0)

set -e

CHARD_ROOT="/usr/local/chard"
USER_RC="$HOME/.chardrc"

echo "[*] Creating CHARD ROOT in $CHARD_ROOT..."
sudo mkdir -p "$CHARD_ROOT"/{etc/portage,usr/portage,usr/bin,usr/lib,var/tmp,dev,tmp,var/cache/distfiles,var/cache/packages}

ARCH=$(uname -m)
case "$ARCH" in
    x86_64)   GENTOO_ARCH="amd64" ;;
    i*86)     GENTOO_ARCH="x86" ;;
    aarch64)  GENTOO_ARCH="arm64" ;;
    armv7l)   GENTOO_ARCH="arm" ;;
    ppc64le)  GENTOO_ARCH="ppc64le" ;;
    *) echo "Unknown architecture: $ARCH"; exit 1 ;;
esac

MAKE_CONF="$CHARD_ROOT/etc/portage/make.conf"
echo "[*] Writing $MAKE_CONF..."
sudo bash -c "cat > '$MAKE_CONF' <<EOF
CHOST='${GENTOO_ARCH}-unknown-linux-gnu'
ARCH='${GENTOO_ARCH}'
ACCEPT_KEYWORDS='~${GENTOO_ARCH}'
ROOT='${CHARD_ROOT}'
CFLAGS='-O2 -pipe'
CXXFLAGS='\${CFLAGS}'
PORTAGE_TMPDIR='\${ROOT}/var/tmp'
DISTDIR='\${ROOT}/var/cache/distfiles'
PKGDIR='\${ROOT}/var/cache/packages'
EOF"

echo "[*] make.conf created with ARCH=${GENTOO_ARCH}"

PORTAGE_DIR="$CHARD_ROOT/usr/portage"
SNAPSHOT_URL="https://gentoo.osuosl.org/snapshots/portage-latest.tar.xz"
TMP_TAR="/tmp/portage-latest.tar.xz"

echo "[*] Downloading Portage tree snapshot..."
curl -L -o "$TMP_TAR" "$SNAPSHOT_URL"

echo "[*] Extracting snapshot into $PORTAGE_DIR..."
sudo tar -xJf "$TMP_TAR" -C "$PORTAGE_DIR" --strip-components=1
rm -f "$TMP_TAR"

echo "[*] Portage tree ready in $PORTAGE_DIR"

if [ ! -f "$USER_RC" ]; then
    echo "[*] Creating $USER_RC with loader..."
    cat > "$USER_RC" <<'EOF'
# <<< CHARD_ENV <<<

if [ ! -f /usr/local/chard/chard.env ]; then
    curl -fsSL https://raw.githubusercontent.com/shadowed1/Chard/main/.chard.env -o /usr/local/chard/chard.env
fi

if [ ! -f /usr/local/chard/chard.logic ]; then
    curl -fsSL https://raw.githubusercontent.com/shadowed1/Chard/main/.chard.logic -o /usr/local/chard/chard.logic
fi

if [ -f /usr/local/chard/chard.env ]; then
    source /usr/local/chard/chard.env
fi

if [ -f /usr/local/chard/chard.logic ]; then
    source /usr/local/chard/chard.logic
fi

# <<< END CHARD_ENV <<<
EOF
fi

echo "[*] Chard sandbox setup complete. Reload terminal or run 'source ~/.chardrc' to start using it."
