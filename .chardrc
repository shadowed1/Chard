# <<< CHARD_ENV <<<

export CHARD_ROOT="/usr/local/chard"

# PATH setup: put system first, then Chard
case ":$PATH:" in
    *":$CHARD_ROOT/usr/bin:"*) ;;
    *) PATH="$PATH:$CHARD_ROOT/usr/bin" ;;
esac

case ":$PATH:" in
    *":$CHARD_ROOT/bin:"*) ;;
    *) PATH="$PATH:$CHARD_ROOT/bin" ;;
esac

# LD_LIBRARY_PATH setup: system libs first, then Chard
case ":$LD_LIBRARY_PATH:" in
    *":$CHARD_ROOT/usr/lib:"*) ;;
    *) LD_LIBRARY_PATH="${LD_LIBRARY_PATH:+$LD_LIBRARY_PATH:}$CHARD_ROOT/usr/lib" ;;
esac

case ":$LD_LIBRARY_PATH:" in
    *":$CHARD_ROOT/usr/lib64:"*) ;;
    *) LD_LIBRARY_PATH="${LD_LIBRARY_PATH:+$LD_LIBRARY_PATH:}$CHARD_ROOT/usr/lib64" ;;
esac

export PATH
export LD_LIBRARY_PATH

[ -f "$CHARD_ROOT/.chard.env" ] && source "$CHARD_ROOT/.chard.env"
[ -f "$CHARD_ROOT/.chard.logic" ] && source "$CHARD_ROOT/.chard.logic"

# <<< END CHARD_ENV <<<
